<%= form_for(@restaurant) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :seat %>
  <%= f.text_field :seat %>
  <%= f.label :number_phone %>
  <%= f.text_field :number_phone %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :address %>
  <%= f.text_field :address, :id => "address" %>

          <%= f.label :numero %><br>
          <%= f.text_field :street_number, :id => "street_number", :class => "form-control" %>

          <%= f.label :rue %><br>
          <%= f.text_field :route, :id => "route", :class => "form-control" %>


          <%= f.label :ville %><br>
          <%= f.text_field :locality, :id => "locality", :class => "form-control" %>


          <%= f.label :pays %><br>
          <%= f.text_field :country, :id => "country", :class => "form-control" %>




  <%= f.submit %>
<% end %>