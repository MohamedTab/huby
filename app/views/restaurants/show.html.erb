<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-7">

      <h1><%= @restaurant.name %></h1>

      <% @restaurant.restaurant_pictures.each do |restaurant_picture| %>

        <% if restaurant_picture.nil? %>

        <p> pas de photo de dispo bitch </p>

      <% else %>
      <%= image_tag restaurant_picture.picture(:medium) %>

      <% end %>

      <% end %>
    </div>
  </div>
</div>


<p><%= @restaurant.description %></p>



<% reviews = Review.where(restaurant_id: @restaurant.id) %>
  <% if reviews.nil? %>
    <p> Ajoutez le premier commentaire <p>
  <% else %>
    <% reviews.each do |review| %>
      <p> <strong> Commentaire du <%= review.created_at.to_formatted_s(:short) %> </strong>
        <p> <strong> <%= review.title %> </strong>
        <% if review.rate == 1 %>
          <span style="color:orange;">★</span> <span>★</span><span>★</span><span>★</span><span>★</span>
        <% elsif review.rate == 2 %>
          <span style="color:orange;">★</span> <span style="color:orange;">★</span><span>★</span><span>★</span><span>★</span>
        <% elsif review.rate == 3 %>
          <span style="color:orange;">★</span> <span style="color:orange;">★</span><span style="color:orange;">★</span><span>★</span><span>★</span>
        <% elsif review.rate == 4 %>
          <span style="color:orange;">★</span> <span style="color:orange;">★</span><span style="color:orange;">★</span><span style="color:orange;">★</span><span>★</span>
        <% elsif review.rate == 5 %>
          <span style="color:orange;">★</span> <span style="color:orange;">★</span><span style="color:orange;">★</span><span style="color:orange;">★</span><span style="color:orange;">★</span>
        <% end %>

          <%= review.comment %>
       <%= link_to 'Supprimer', review, method: :delete, alert: { confirm: 'Are you sure?' }, style: "color: white;", class: "btn btn-danger" %></p>
        <div style="border: 1px solid grey; background-color: white; border-radius: 5px; padding: 15px 20px; margin-bottom: 15px;">

        </div>
    <% end %>
  <% end %>


